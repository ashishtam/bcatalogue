<div id = "">
  <table class="table table-hover">
    <th>S.no</th>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
  	
  	<% @abusiness[tab_id].each_with_index do |business, i| %>
    <tr>
    	<td><%= i+1 %></td>
      <td><%= social_share_button_tag(business.name, :url => "http://bcatalogue.dev:3000") %></td>
      <td><%= business.name %></td>
      <td><%= raw(business.description) %></td>
      <td><%= raw(business.category) %></td>
      </tr>
      <% end %>
  </table>
</div>